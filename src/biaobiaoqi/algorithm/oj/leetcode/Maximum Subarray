//DP的思想，并做了空间的优化。
public class Solution {
    public int maxSubArray(int[] A) {
        int var = 0;
        int max = Integer.MIN_VALUE;
        for (int i = 0; i < A.length; i ++) {
            var = var > 0 ? var + A[i] : A[i];
            max = var > max ? var : max;
        }
        return max;
    }
}
