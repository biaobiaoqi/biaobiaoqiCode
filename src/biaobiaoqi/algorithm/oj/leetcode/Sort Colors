//两趟算法：桶排序的思路
public class Solution {
    public void sortColors(int[] A) {
        int[] count = new int[3];
        for (int i = 0; i != A.length; i ++)
            count[A[i]] ++;
        
        for (int i = 0; i != A.length; i ++) {
            if (i < count[0]) 
                A[i] = 0;
            else if (i < count[0] + count[1])
                A[i] = 1;
            else
                A[i] = 2;
        }
    }
}


