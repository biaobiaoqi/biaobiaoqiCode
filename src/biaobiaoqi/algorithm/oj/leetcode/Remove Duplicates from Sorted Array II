public class Solution {
    public int removeDuplicates(int[] A) {
        int index = 0;
        int length = A.length;
        if (length == 0) return 0;
        
        for (int i = 1; i != length; i++ ) {
            if (A[i] == A[index]) {
                if (index == 0 || A[i] != A[index - 1]) {
                    A[++ index] = A[i];
                }
            } else {
                A[++ index] = A[i];
            }
        }
        
        return index + 1;
    }
}